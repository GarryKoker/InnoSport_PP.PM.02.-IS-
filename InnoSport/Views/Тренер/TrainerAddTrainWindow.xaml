<Window x:Class="InnoSport.Views.Тренер.TrainerAddTrainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить тренировку"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="480" Width="440"
        AllowsTransparency="True">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F0F4F8" Offset="0"/>
            <GradientStop Color="#E3EAFD" Offset="0.5"/>
            <GradientStop Color="#B6D0E2" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Border Background="White" CornerRadius="20" Padding="36"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="#E3EAFD" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Добавить тренировку" FontSize="22" FontWeight="Bold" Foreground="#4A90E2" HorizontalAlignment="Center" Margin="0,0,0,18"/>

                <TextBlock Text="Секция" FontSize="14" Foreground="#555"/>
                <ComboBox x:Name="SectionComboBox" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <TextBlock Text="Дата" FontSize="14" Foreground="#555" Margin="0,10,0,0"/>
                <DatePicker x:Name="DatePicker" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <TextBlock Text="Время" FontSize="14" Foreground="#555" Margin="0,10,0,0"/>
                <TextBox x:Name="TimeTextBox" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <TextBlock Text="Описание" FontSize="14" Foreground="#555" Margin="0,10,0,0"/>
                <TextBox x:Name="DescriptionTextBox" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
                    <Button Content="Сохранить"
                            Width="130" Height="38"
                            Background="#4A90E2" Foreground="White"
                            FontWeight="SemiBold"
                            Margin="0,0,12,0"
                            Click="SaveButton_Click"/>
                    <Button Content="Отмена"
                            Width="100" Height="38"
                            Background="White" Foreground="#4A90E2"
                            FontWeight="SemiBold"
                            BorderBrush="#4A90E2" BorderThickness="1"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>