<Window x:Class="InnoSport.Views.Обычный_пользователь.SimpleUserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль пользователя" Height="650" Width="1000"
        Background="#F4F6FB"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="12" ShadowDepth="2" Color="#B0B8C1"/>
        <Style TargetType="Button" x:Key="AccentButton">
            <Setter Property="Background" Value="#4F8EF7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,20,0,20">
            <Button Content="⟵ Выход" Style="{StaticResource AccentButton}" Width="110" Height="36"
                    Click="BackButton_Click" DockPanel.Dock="Left" Margin="0,0,20,0"/>
            <Border Background="#4F8EF7" CornerRadius="12" Padding="24" Effect="{StaticResource DropShadowEffect}" DockPanel.Dock="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="64" Height="64" Fill="#fff">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#888"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Добро пожаловать," FontSize="20" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock x:Name="UserFullNameText" FontSize="28" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DockPanel>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,20,0" Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <TextBlock Text="Моя информация" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="👤" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock x:Name="UserFioText" Text="ФИО: " FontSize="16"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="📱" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock x:Name="UserPhoneText" Text="Телефон: " FontSize="16"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="✉️" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock x:Name="UserEmailText" Text="Email: " FontSize="16"/>
                    </StackPanel>
                    <Button Content="Редактировать" Style="{StaticResource AccentButton}" Width="140" Click="EditProfileButton_Click"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Padding="24" Grid.Column="1" Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <TextBlock Text="Доступные секции" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                    <DataGrid x:Name="SectionsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                              HeadersVisibility="Column" RowHeight="40" FontSize="15"
                              Background="White" BorderThickness="0" GridLinesVisibility="None"
                              SelectionMode="Single" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
                            <DataGridTextColumn Header="Тренер" Binding="{Binding Coach}" Width="*"/>
                            <DataGridTemplateColumn Header="Действие" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Присоединиться"
                                                Style="{StaticResource AccentButton}"
                                                Width="120"
                                                Command="{Binding DataContext.JoinSectionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>