<Window x:Class="InnoSport.Views.Главный_администратор.ChiefAdministratorEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать пользователя"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="663" Width="440"
        AllowsTransparency="True">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F0F4F8" Offset="0"/>
            <GradientStop Color="#E3EAFD" Offset="0.5"/>
            <GradientStop Color="#B6D0E2" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Border Background="White" CornerRadius="20" Padding="36"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="#E3EAFD" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Редактировать пользователя" FontSize="22" FontWeight="Bold" Foreground="#4A90E2" HorizontalAlignment="Center" Margin="0,0,0,18"/>

                <TextBlock Text="Фамилия" FontSize="14" Foreground="#555"/>
                <TextBox x:Name="SurnameTextBox" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <TextBlock Text="Имя" FontSize="14" Foreground="#555" Margin="0,10,0,0"/>
                <TextBox x:Name="NameTextBox" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <TextBlock Text="Отчество" FontSize="14" Foreground="#555" Margin="0,10,0,0"/>
                <TextBox x:Name="OtchestvoTextBox" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <TextBlock Text="Телефон" FontSize="14" Foreground="#555" Margin="0,10,0,0"/>
                <TextBox x:Name="PhoneNumberTextBox" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <TextBlock Text="Email" FontSize="14" Foreground="#555" Margin="0,10,0,0"/>
                <TextBox x:Name="EmailTextBox" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <TextBlock Text="Роль" FontSize="14" Foreground="#555" Margin="0,10,0,0"/>
                <ComboBox x:Name="RoleComboBox" Margin="0,8,0,0" FontSize="15" Height="36"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
                    <Button Content="Сохранить"
                            Width="120" Height="38"
                            Background="#4A90E2" Foreground="White"
                            FontWeight="SemiBold"
                            Margin="0,0,12,0"
                            Click="SaveButton_Click"/>
                    <Button Content="Удалить"
                            Width="100" Height="38"
                            Background="#E74C3C" Foreground="White"
                            FontWeight="SemiBold"
                            Margin="0,0,12,0"
                            Click="DeleteButton_Click"/>
                    <Button Content="Отмена"
                            Width="100" Height="38"
                            Background="White" Foreground="#4A90E2"
                            FontWeight="SemiBold"
                            BorderBrush="#4A90E2" BorderThickness="1"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>