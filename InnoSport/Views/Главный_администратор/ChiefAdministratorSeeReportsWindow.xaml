<Window x:Class="InnoSport.Views.Главный_администратор.ChiefAdministratorSeeReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр отчётов"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="600" Width="900"
        AllowsTransparency="True">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F0F4F8" Offset="0"/>
            <GradientStop Color="#E3EAFD" Offset="0.5"/>
            <GradientStop Color="#B6D0E2" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Border Background="White" CornerRadius="20" Padding="36"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="#E3EAFD" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Отчёты и аналитика" FontSize="22" FontWeight="Bold" Foreground="#4A90E2" HorizontalAlignment="Center" Margin="0,0,0,18"/>
                <!-- Здесь могут быть графики, таблицы, фильтры и т.д. -->
                <TextBlock Text="Здесь будет аналитика и отчёты (заглушка)" FontSize="16" Foreground="#888" HorizontalAlignment="Center" Margin="0,40,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>